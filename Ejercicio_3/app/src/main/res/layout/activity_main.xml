<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Calculadora de salario"
        android:textColor="#113BBC"
        android:textSize="30sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                app:cardCornerRadius="5dp"
                android:elevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textTitulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Empleado 1"
                        android:textColor="#000000"
                        android:textFontWeight="900"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/textNombre1"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textTitulo"
                        android:layout_marginTop="10dp"
                        android:hint="Nombre"
                        android:inputType="text"
                        android:padding="10dip"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/textCargo1"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textNombre1"
                        android:layout_marginTop="10dp"
                        android:hint="Cargo"
                        android:inputType="text"
                        android:padding="10dip"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/textHoras1"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textCargo1"
                        android:layout_marginTop="10dp"
                        android:hint="Horas"
                        android:inputType="number"
                        android:padding="10dip"
                        android:singleLine="true" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                app:cardCornerRadius="5dp"
                android:elevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Empleado 2"
                        android:textColor="#000000"
                        android:textFontWeight="900"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/textNombre2"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title2"
                        android:layout_marginTop="10dp"
                        android:hint="Nombre"
                        android:inputType="text"
                        android:padding="10dip"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/textCargo2"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textNombre2"
                        android:layout_marginTop="10dp"
                        android:hint="Cargo"
                        android:inputType="text"
                        android:padding="10dip"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/textHoras2"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textCargo2"
                        android:layout_marginTop="10dp"
                        android:hint="Horas"
                        android:inputType="number"
                        android:padding="10dip"
                        android:singleLine="true" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp"
                android:elevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Empleado 3"
                        android:textColor="#000000"
                        android:textFontWeight="900"
                        android:textSize="24sp" />

                    <EditText
                        android:id="@+id/textNombre3"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/title3"
                        android:layout_marginTop="10dp"
                        android:hint="Nombre"
                        android:inputType="text"
                        android:padding="10dip"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/textCargo3"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textNombre3"
                        android:layout_marginTop="10dp"
                        android:hint="Cargo"
                        android:inputType="text"
                        android:padding="10dip"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/textHoras3"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/textCargo3"
                        android:layout_marginTop="10dp"
                        android:hint="Horas"
                        android:inputType="number"
                        android:padding="10dip"
                        android:singleLine="true" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:onClick="calcular"
                    android:text="Calcular"
                    android:textFontWeight="900"
                    android:textSize="16sp"
                    app:backgroundTint="#113BBC" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="Regresar"
                    android:textFontWeight="900"
                    android:textSize="16sp"
                    app:backgroundTint="#113BBC" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>